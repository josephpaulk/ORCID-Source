<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
        
    <changeSet id="FIX-EMAIL-CASE-INSENSITIVE-UNIQUE-CONSTRAINT" author="Will Simpson" dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists indexName="lower_case_email_unique2" tableName="email" schemaName="public"/>
            </not>
        </preConditions>
        <createIndex tableName="email" indexName="lower_case_email_unique2" unique="true">
            <column name="lower(email)"/>
        </createIndex>
        <dropIndex tableName="email" indexName="lower_case_email_unique" schemaName="public"/>  
    </changeSet>
    
</databaseChangeLog>